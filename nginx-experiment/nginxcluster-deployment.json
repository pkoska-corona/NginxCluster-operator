{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "nginx-cluster-deployment",
        "labels": {
            "app": "nginx-cluster-deployment"
        }
    },
    "spec": {
        "replicas": 3,
        "selector": {
            "matchLabels": {
                "app": "nginx-cluster-deployment"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "nginx-cluster-deployment"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "nginx",
                        "image": "nginx:1.14.2",
                        "ports": [
                            {
                                "containerPort": 80
                            }
                        ]
                    },
                    {
                        "name": "healthcheck-container",
                        "image": "",
                        "ports": [
                            {
                                "containerPort": 80
                            }
                        ]
                    }
                ]
            }
        }
    }
}